pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the repository containing the Dockerfile and Java code
                git 'https://your-repository-url.git'
            }
        }

        stage('Build and Test Java Application') {
            steps {
                // Run Maven to build and test the Java application
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                script {
                    docker.build('minecraft-server:latest')
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                // Run the Docker container
                script {
                    docker.image('minecraft-server:latest').run('-p 25565:25565')
                }
            }
        }
    }
}
